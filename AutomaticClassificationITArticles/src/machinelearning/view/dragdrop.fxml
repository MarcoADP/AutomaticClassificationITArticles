<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" stylesheets="@app.css" onDragDropped="#handleDragDropped" onDragEntered="#handleDragEntered"
            onDragExited="#handleDragExited" onDragOver="#handleDragOver"
            onMouseClicked="#handleMouseClick" minHeight="200.0" minWidth="400.0"
            styleClass="drag-pane" fx:controller="machinelearning.controller.DragDropController"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="labelDrag" alignment="CENTER" contentDisplay="CENTER" styleClass="drag-label"
               text="Clique ou solte arquivos aqui para analisar." textAlignment="CENTER"
               textFill="#cccccc" wrapText="true" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font name="Tahoma Bold" size="30.0"/>
            </font>
        </Label>
    </children>
    <cursor>
        <Cursor fx:constant="HAND"/>
    </cursor>
</AnchorPane>